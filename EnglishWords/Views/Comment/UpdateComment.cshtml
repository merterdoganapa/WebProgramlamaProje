@model EnglishWords.Models.Comment

@{
    ViewData["Title"] = "Update Word";
}

<div class="container" style="margin-top:200px;">

    <!-- Contact Section Heading-->
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">UPDATE SENTENCE</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
    </div>

    <!-- Post Content Column -->
    <div class="col-lg-8 ortala">
        <div class="card my-4">
            <h5 class="card-header">Leave a Sentence:</h5>
            <div class="card-body">
                <form asp-controller="Comment" asp-action="UpdateComment" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" rows="3" name="sentence" id="sentence">
                            
                        </textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>


    </div>
    <!-- /.row -->
</div>