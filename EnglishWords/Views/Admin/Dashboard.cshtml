@{
    ViewData["Title"] = "Dashboard";
}

<div class="container" style="margin-top:200px;">
    <h3 style="text-align:center;margin:30px 0px;">User List</h3>
    <table class="table center" style="        
        align-items: center;
        text-align: center;
        max-width: 70%;
        margin-left: auto;
        margin-right: auto;
    ">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Username</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.UserList)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>
                        <a href="/Admin/DeleteUser/@user.Id"><img src="~/images/cancel.png" alt=""></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3 style="text-align:center;margin-top:100px;margin-bottom:30px">Word List</h3>
    <table class="table" style="        
        align-items: center;
        text-align: center;
        max-width: 70%;
        margin-left: auto;
        margin-right: auto;
    ">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Word</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var word in ViewBag.WordList)
            {
                <tr>
                    <td>@word.word_en</td>
                    <td>
                        <a href="/Word/DeleteWord/@word.Id"><img src="~/images/cancel.png" alt=""></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
