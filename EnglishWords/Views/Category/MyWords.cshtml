@{
    ViewData["Title"] = "My Words";
}

<div class="container" style="margin-top: 175px;">

    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">MY WORDS</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
    </div>
    @if (@ViewBag.WordList.Count != 0)
    {
        <table class="table text-center" style="margin-bottom:100px;">
            <thead style="background:#1abc9c;">
                <tr>
                    <th scope="col">Kelime</th>
                    <th scope="col">Karşılığı</th>
                    <th scope="col">Ekleyen</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in @ViewBag.WordList)
                {
                    <tr>
                        <th scope="row"><a>@item.word_en</a></th>
                        <td>@item.word_tr</td>
                        <td>@item.Category</td>
                        <td>
                            <a href="/Word/DeleteWord/@item.Id"><img src="~/images/trash.png" alt=""></a>
                            <a href="/Word/UpdateWord/@item.Id"><img src="~/images/arrow.png" alt=""></a>
                        </td>
                        
                    </tr>


                }

            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger text-center" style="margin-top:100px;">Henüz kelime eklemediniz.</div>
    }


</div>

