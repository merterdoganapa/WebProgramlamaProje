@{
    ViewData["Title"] = "My Words";
}

<div class="container" style="margin-top: 175px;">

    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">MY WORDS</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
    </div>
    <table class="table text-center">
        <thead style="background:#1abc9c;">
            <tr>
                <th scope="col">Kelime</th>
                <th scope="col">Karşılığı</th>
                <th scope="col">Kategori</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>

            @foreach (var word in @ViewBag.words)
            {
                <tr>
                    <th scope="row"><a href="">@word.word_en</a></th>
                    <td>@word.word_tr</td>
                    <td>@word.Category</td>
                    <td>
                        <a href="/Word/DeleteWord/@word.Id"><img src="~/images/trash.png" alt=""></a>
                        <a href="/word/update/"><img src="~/images/arrow.png" alt=""></a>
                    </td>

                </tr>
            }


        </tbody>
    </table>

    @if (ViewBag.words == null)
    {
        <div class="alert alert-danger text-center" style="margin-top:100px;">Henüz Kelime Eklemediniz</div>
    }


</div>

